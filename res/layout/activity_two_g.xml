<com.nmc.zoom.ZoomView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent">
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <Button
        android:id="@+id/p"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginTop="125dp"
        android:layout_marginLeft="5dp"
        android:background="#FF0000"
        android:text="P"
        android:textSize="7dp"
        android:textColor="#FFFFFF" />
    
    <Button
        android:id="@+id/i"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginTop="125dp"
        android:layout_marginLeft="15dp"
        android:background="#FFA500"
        android:text="I"
        android:textSize="7dp"
        android:textColor="#FFFFFF" />
    <Button
        android:id="@+id/g"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginTop="125dp"
        android:layout_marginLeft="25dp"
        android:background="#FFD700"
        android:text="G"
        android:textSize="7dp"
        android:textColor="#FFFFFF" /> 
     <Button
        android:id="@+id/e"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginTop="125dp"
        android:layout_marginLeft="35dp"
        android:background="#9ACD32"
        android:text="E"
        android:textSize="7dp"
        android:textColor="#FFFFFF" /> 
     <Button
        android:id="@+id/x"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginTop="125dp"
        android:layout_marginLeft="45dp"
        android:background="#008000"
        android:text="X"
        android:textSize="7dp"
        android:textColor="#FFFFFF" />
    
    
    <TextView
        android:id="@+id/txtDateUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="LastUpdate"
        android:textSize="14dp"
        android:textStyle="italic" />
    <TextView
        android:id="@+id/txtDash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
  		android:gravity="right"
        android:text="Dashboard"
        android:textColor="#ff0000"
        android:textSize="15dp"
        android:textStyle="bold" />
    
    <TextView
        android:id="@+id/txt2gCSSR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/speedometer2gCSSR"
        android:layout_marginLeft="105dp"
        android:text="Cssr : "
        android:textSize="11dp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/txt2gAVAIL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txt2gCSSR"
        android:layout_alignBottom="@+id/txt2gCSSR"
        android:layout_alignRight="@+id/speedometer2gAVAIL"
         android:layout_marginLeft="190dp"
        android:text="Availability  : "
        android:textSize="11dp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/txt2gCDR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_marginTop="103dp"
        android:layout_marginLeft="5dp"
        android:text="Cdr : "
        android:textSize="11dp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/txt2G"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_toLeftOf="@+id/speedometer2gAVAIL"
        android:text="2G KPIs Evolution"
        android:textColor="#ff0000"
        android:textSize="14dp"
        android:textStyle="bold" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chart2G"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_below="@+id/txt2G"
        android:layout_marginTop="4dp" 
        android:clickable="false">
    </com.github.mikephil.charting.charts.LineChart>
    
    <com.nmc.meter.SpeedometerView
        android:id="@+id/speedometer2gCDR"
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:layout_marginTop="60dp" />

    <com.nmc.meter.SpeedometerView
        android:id="@+id/speedometer2gCSSR"
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp" />

    <com.nmc.meter.SpeedometerView
        android:id="@+id/speedometer2gAVAIL"
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:layout_alignRight="@+id/chart2G"
        android:layout_marginTop="60dp" />

</RelativeLayout>
</com.nmc.zoom.ZoomView>
