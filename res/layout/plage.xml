<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
		     xmlns:tools="http://schemas.android.com/tools"
		     android:layout_width="320dp"
			 android:layout_height="150dp"
			 android:orientation="vertical"
			 android:scrollbars="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Select the search range"
        android:textSize="16dp"
        android:textColor="#FF0000" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/bt_Begin"
        android:layout_alignBottom="@+id/bt_Begin"
        android:layout_alignRight="@+id/textView3"
        android:text="to"
        android:textColor="#FF0000"
        android:textSize="16dp" />

    <Button
        android:id="@+id/bt_Begin"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_marginRight="15dp"
        android:layout_marginTop="27dp"
        android:layout_toLeftOf="@+id/textView2"
        android:background="@drawable/button_background"
        android:textColor="#FFFFFF"
        android:text="Date Start" />

      <TextView
          android:id="@+id/textView3"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/bt_Begin"
          android:layout_centerHorizontal="true"
          android:text=""
          android:textColor="#FF0000"
          android:textSize="24dp" />

      <Button
          android:id="@+id/bt_End"
          android:layout_width="90dp"
          android:layout_height="wrap_content"
          android:layout_above="@+id/textView3"
          android:layout_marginLeft="14dp"
          android:layout_toRightOf="@+id/textView3"
          android:background="@drawable/button_background"
          android:text="Date End"
          android:textColor="#FFFFFF"
           />

</RelativeLayout>